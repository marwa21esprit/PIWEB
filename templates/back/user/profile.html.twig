{% extends 'base-back.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}

    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">
            <div class="row g-4">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="position-relative h-100">
                        <img class="img-fluid position-absolute w-100 h-100" src="{{ asset('front/img/about.jpg') }}" alt="Profile Image" style="object-fit: cover;">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                    <h6 class="section-title bg-white text-start text-primary pe-3">Mon profil</h6>
                    <h1 class="mb-4">Welcome to eLEARNING</h1>
                    <p class="mb-4">{{ user.name }}'s profile</p>
                    <p class="mb-4">Email: {{ user.email }}</p>
                    <p class="mb-4">Address: {{ user.address }}</p>
                    <p class="mb-4">Status: {{ user.status }}</p>
                    <!-- Additional user details can be added here -->
                    <a class="btn btn-primary py-3 px-5 mt-2" href="{{ path('app_edit_profile_admin') }}">Modifier</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
